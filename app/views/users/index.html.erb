<div class="container">
    <div class="row">
      <div class="col-xs-3">
<h1>User info</h1>
<div class="profile-container">
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>
<table class="table table-striped">
  <td><h3 class="profile-name"><%= @user.name %></h3></td>
<tr>
  <td><h3 class="introduction"><%= @user.introduction %></h3></td>
</tr>
</table>
 <%= link_to "", edit_user_path(@user), class: "btn col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>




<h1>New book</h1>
<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
      </div>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<%= paginate @users %>
<% end %>
</div>
<div class="col-xs-9">
<table class="table table-striped">
<h1>Users</h1>
<tr>
<% @users.each do |user| %>
<tr>
<td>
<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
<td>name</td>
<td><%=user.name %>
<td><%= link_to 'Show', user_path(user.id) %>
</td>
<% end %>
</tr>
</table>
</div>
</div>
</div>




