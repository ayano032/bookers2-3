<div class="container">
    <div class="row">
      <div class="col-xs-3">
<h1>User info</h1>
<div class="profile-container">
  <h3 class="profile-name"><%= link_to"#{@user.name}",user_path %></h3>
 <%= link_to user_path do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
 <% end %>
  <h3 class="introduction"><%= @user.introduction %></h3>
  <% if @user.id == current_user.id%>
 <%= link_to  "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

 <% end %>
</div>


<h1>New book</h1>
<%= form_for(@book, url: books_path) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message|%>
        <li><%= message %></li>
        <% end %>
      </ul>
      </div>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  <% @book.errors.full_messages.each do |message| %>
     <div class="form-error">
     <%= message %>
     </div>
  <% end %>
<% end %>
</div>
<div class="col-xs-9">
<table class="table table-striped">
<h1>Books</h1>
<tr>
<% @books.each do |book| %>
<td>Title:</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td>Body:</td>
<td><%=book.body %>
  <% if @user.id == current_user.id%>
<%= link_to "Edit", edit_book_path(book), class: "btn btn-default" %>
<%= link_to "Destroy", book_path(book.id), method: :delete, class: "btn btn-default" %>
</td>
<% end %>
<% end %>
</tr>
</table>
</div>
</div>
</div>



