<h1>Editing Book</h1>
<%= form_for(@book, url: book_path) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <% if flash[:notice] %>
   <div class="flash">
    <%=flash[:notice] %>
    </div>
    <% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>

<% end %>